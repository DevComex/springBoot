<!doctype html>
<html>
  <head>
    <meta content="IE=11.0000" http-equiv="X-UA-Compatible">
      <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <meta name="viewport" content="width = device-width ,height = device-height ,initial-scale = 1,minimum-scale = 1,maximum-scale = 1,user-scalable =no" />
        <title>小鸡麻将</title>
        <link rel="stylesheet" type="text/css" href="../resources/css/common.css" />
        <link rel="stylesheet" type="text/css" href="../resources/css/main.css" />
        <script>var rc = "${rc.contextPath}";</script>
        <script src="../resources/js/common/jquery-1.12.4.min.js" type="text/javascript"></script>
        <script src="../resources/js/common/alertbox.js" type="text/javascript"></script>
        <script src="../resources/js/static-ui/changephone.js" type="text/javascript"></script>
        <script type="text/javascript">
          $(function () { $(".reg_form_web").changephone(); });
        </script>
       
      </head>
  <body>
    <div class="topbar-wrap white">
      <div class="topbar-inner clearfix">
        <div class="topbar-logo-wrap clearfix">
          <ul class="navbar-list clearfix">
            <li>修改绑定手机</li>
          </ul>
        </div>
      </div>
    </div>
    <div class="container clearfix">
      <div class="main-wrap noleft">
        <div class="result-wrap">
          <form method="post" action="" class="reg_form_web">
            <div class="js_fir">
            <p>
                <label>原手机号：</label>
                <span class="txtform js_bindphone" id="oldPhone">$!phone</span>
              </p>
              <p class="item_p">
                <label>验证码：</label>
                <span class="ipt_box">
                  <input class="ipt capthaipt captchaCode01" type="text" name="smsCode" data-tip="验证码" placeholder="短信验证码" value="" maxlength="10">
                        </span>
                <span class="error tip"></span>
               <input class="btn btnlater js_reg_sendsms1 btn-danger" type="button" value="获取验证码">
               </p>
              
              <p class="formbtn">
                <a href="javascript:;" class="btn btn-info js_next">下一步</a>
              </p>
            </div>
            <div class="js_sed dis">
             <p class="item_p">
                <label>新手机号：</label>
                <span class="ipt_box">
                 <input class="ipt js_phone" type="text" name="phone" data-tip="新手机号" placeholder="新手机号码" value="" maxlength="11">
                 </span>
                <span class="error tip"></span>
               
              </p>
              <p class="item_p">
                <label>验证码：</label>
                <span class="ipt_box">
                  <input class="ipt capthaipt captchaCode02" type="text" name="smsCodes" data-tip="验证码" placeholder="短信验证码" value="" maxlength="10">
                        </span>
                <span class="error tip"></span>
               <input class="btn btnlater get_sm dis btn-danger" type="button" value="获取验证码">
               </p>
              
              <p class="formbtn">
                <a href="javascript:;" class="btn btn-success js_submit">确认绑定</a>
              </p>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="botmenu white js_bottommenu"></div>
    <script src="../resources/js/menu/js/menuheadjson.js"></script>
  </body>
</html>
