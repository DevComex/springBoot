<!doctype html>
<html>
  <head>
    <meta content="IE=11.0000" http-equiv="X-UA-Compatible">
      <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <meta name="viewport" content="width = device-width ,height = device-height ,initial-scale = 1,minimum-scale = 1,maximum-scale = 1,user-scalable =no" />
        <title>小鸡麻将</title>
        <link rel="stylesheet" type="text/css" href="../resources/css/common.css" />
        <link rel="stylesheet" type="text/css" href="../resources/css/main.css" />
        <script>var rc = "${rc.contextPath}";</script>
        <script src="../resources/js/common/jquery-1.12.4.min.js" type="text/javascript"></script>
        <script src="../resources/js/static-ui/findPassWord.js" type="text/javascript"></script>
        <script type="text/javascript">
          $(function () { $(".reg_form_web").RetrievalPassWord(); });
        </script>
      </head>
  <body>
    <div class="topbar-wrap white">
      <div class="topbar-inner clearfix">
        <div class="topbar-logo-wrap clearfix">
          <ul class="navbar-list clearfix">
            <li>找回密码</li>
          </ul>
        </div>
      </div>
    </div>
    <div class="container clearfix">
      <div class="main-wrap noleft">
        <div class="result-wrap">
          <form method="post" action="" class="reg_form_web">
            <div class="js_fir">
              <p class="item_p">
                <label>账号：</label>
                <span class="ipt_box">
                  <input class="ipt" type="text" name="account" data-tip="账号" placeholder="请输入账号" value="" maxlength="30">
                        </span>
                <span class="error tip"></span>
              </p>
              <p class="item_p">
                <label>验证码：</label>
                <span class="ipt_box">
                  <input class="ipt capthaipt" type="text" name="captchaCode" data-tip="验证码" placeholder="验证码" value="" maxlength="4"><img src="" class="js_capimg"></span>
                <span class="error tip"></span>
                <a href="javascript:;" class="btnlater js_fwkbq">看不清</a>
              </p>
              <p class="formbtn">
                <a href="javascript:;" class="btn btn-info js_check">验证</a>
              </p>
            </div>
            <div class="js_sed dis">
            <p>
                <label>绑定手机：</label>
                <span class="txtform js_bindphone"></span>
              </p>
              <p class="item_p">
                <label>验证码：</label>
                <span class="ipt_box">
                  <input class="ipt capthaipt" type="text" name="smsCode" data-tip="验证码" placeholder="短信验证码" value="" maxlength="10">
                        </span>
                <span class="error tip"></span>
               <input class="btn btnlater js_reg_sendsms disabled" type="button" value="获取验证码" disabled="disabled"/>
              </p>
              <p class="item_p">
                <label>新密码：</label>
                <span class="ipt_box">
                  <input class="ipt" type="password" name="password" data-tip="密码" placeholder="输入新密码" value="" maxlength="16">
                        </span>
                <span class="error tip"></span>
              </p>
              <p class="item_p">
                <label>确认密码：</label>
                <span class="ipt_box">
                  <input class="ipt" type="password" name="confirmPassword" data-tip="确认密码" placeholder="请再次输入密码" value="" maxlength="16">
                        </span>
                <span class="error tip"></span>
              </p>
              <p class="formbtn">
                <a href="javascript:;" class="btn btn-info js_prev">上一步</a>&nbsp;&nbsp;<a href="javascript:;" class="btn btn-success js_submit">确定</a>
              </p>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="botmenu white js_bottommenu"></div>
    <script src="../resources/js/menu/js/menuheadjson.js"></script>
  </body>
</html>
