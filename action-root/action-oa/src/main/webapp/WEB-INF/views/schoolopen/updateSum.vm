        				$("#missionState").val(missionState);
        				$("#missionCredits").val(missionCredits);
        				$("#missionType2").val(missionType);
        				$("#recommendTags2").val(recommendTags);
        				$("#uploadNum").val(uploadNum);
        				$("#SignNum").val(SignNum);
        				//图片
