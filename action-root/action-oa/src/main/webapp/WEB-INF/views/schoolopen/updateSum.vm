        				if(missionName == ""){
        					alert("请填写任务名称!");
        				}else if(missionCredits == ""){
        					alert("积分必须填写!");
        				}else if(missionType == ""){
        					alert("请选择类别!");
        				}else if(recommendTags == ""){
        					alert("请选择推荐!");
        				}else if(valS == ""){
