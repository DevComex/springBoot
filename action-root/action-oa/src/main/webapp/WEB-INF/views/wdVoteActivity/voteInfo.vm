    <script type="text/javascript" charset="utf-8">
    	function query(currentPage){
			$("#data-table tbody").empty();
	
			
			$.ajax({
				url:"${rc.contextPath}/voteStatistics/queryVoteInfo",
				type:"GET",
				data:{
					"currentPage":currentPage
					},
				cache:false,
				dataType:"json",
				success:function(data){
					if(data.data == null  || data.data.list == null || data.data.list.length==0){
						alert("没有符合条件的记录");
						$("#firstPage-btn").attr("disabled", true);
						$("#prevPage-btn").attr("disabled",true);
						$("#nextPage-btn").attr("disabled",true);
						$("#lastPage-btn").attr("disabled",true);
						$("#totalPage-span").text(1);
						$("#currentPage-span").text(1);
						return false;
					}
					var page = data.data;
					var list = page.list;
					for (var i = 0; i < list.length; i ++){
						var $tr = "<tr><td>" + list[i].account + 
									"</td><td>" + list[i].integral + 
									"</td><td>" + list[i].voteNum + 
									"</td><tr>"
						$("#data-table tbody").append($tr);
					}
					$("#currentPage-span").text(page.currentPage);
					$("#totalPage-span").text(page.totalPage < 1 ? 1 : page.totalPage);
						if(page.hasNextPage){
							$("#nextPage-btn").attr("disabled", false);
							$("#lastPage-btn").attr("disabled",false);
						}else{
							$("#nextPage-btn").attr("disabled",true);
							$("#lastPage-btn").attr("disabled",true);
						}
						if(page.hasPrevPage){
							$("#firstPage-btn").attr("disabled", false);
							$("#prevPage-btn").attr("disabled",false);
						}else{
							$("#firstPage-btn").attr("disabled", true);
							$("#prevPage-btn").attr("disabled",true);
						}
				
				},
				error:function(){
					alert("网络错误");
				}
			
			});
    	
    	
    	}
    
    
		$(function(){
			query(1);
		
			$("#query-btn").on("click",function(){
				var account = $.trim($("#account").val());
				if(account == null || account== "" || account.length ==0){
					alert("请输入账号");
					return false;
				}
			
			$.ajax({
				url:"${rc.contextPath}/voteStatistics/findByAccount",
				type:"GET",
				data:{
					"account":account
					},
				cache:false,
				dataType:"json",
				success:function(data){
					if(!data.isSuccess){
						alert(data.message);
						return false;
					}
					voteBean = data.data;
					$("#data-table tbody").empty();
					var $tr = "<tr><td>" + voteBean.account + 
									"</td><td>" + voteBean.integral + 
									"</td><td>" + voteBean.voteNum + 
									"</td><tr>";
					$("#data-table tbody").append($tr);
					$("#firstPage-btn").attr("disabled", true);
						$("#prevPage-btn").attr("disabled",true);
						$("#nextPage-btn").attr("disabled",true);
						$("#lastPage-btn").attr("disabled",true);
						$("#totalPage-span").text(1);
						$("#currentPage-span").text(1);
				},
				error:function(){
					alert("网络错误");
				}
			
			});
			
				return false;
			});
		
			// 翻页
		$("#firstPage-btn").on("click",function(){
			query(1);
		});
		$("#lastPage-btn").on("click",function(){
			query($("#totalPage-span").text());
		});
		$("#prevPage-btn").on("click",function(){
			query(parseInt($("#currentPage-span").text()) - 1);
		});
		$("#nextPage-btn").on("click",function(){
			query(parseInt($("#currentPage-span").text()) + 1);
		});
	
		
		});


    </script>
