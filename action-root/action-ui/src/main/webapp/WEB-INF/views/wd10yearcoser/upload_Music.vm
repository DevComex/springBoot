    <script>

    function lengthS(ob,bytesL){
 	   var ob=$(ob).val();
        //初始中文长度
        var s=0;
        //默认总长度字符
        var allL=0;
        for(var i=0;i<ob.replace(/\s+/g,"").length;i++)
        {
            if( /.*[\u4e00-\u9fa5]+.*$/.test(ob.replace(/\s+/g,"").charAt(i))){
                s++;
            };
        }
        //英文个数总长
        var chi= ob.replace(/\s+/g,"").length-s;
        //总长
        allL=chi+s*2;
        if(allL>bytesL)
        {
            return false;
        }
        return true;
    }
   
