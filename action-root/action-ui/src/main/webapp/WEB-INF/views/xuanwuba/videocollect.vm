    <script type="text/javascript">
        $(function () {
           //图片上传
            UPLOADURL = "http://up.gyyx.cn/Image/WebSiteSaveToTemp.ashx?group=official_site&width=200&height=200";
            FLASHURL = "http://up.gyyx.cn/flash/swfupload_f9.swf";
            FILESIZE = "1024";
            FILETYPE = "*.jpg;*.gif;*.png";
            TYPESDESCRIPTION = "*";
            UPLOADLIMIT = "1";
            QUEUELIMIT = 0;
            DEBUG = false;
            UPLOADTARGET = "divFileProgressContainer";
            SAVEELEMENT = "FileCode";

            if ($("#btnUpload").length > 0) {
                Initialize();
            }

            $("#name").focus(function () {
                if ($("#name").val().trim() == "请输入视频名称") {
                    $("#name").val("");
                }
            })

            $("#profile").focus(function () {
                if ($("#profile").val().trim() == "请输入内容") {
                    $("#profile").val("");
                }
            })

            $(".zjSubmit").click(function () {
                //验证是否为空，为空获得焦点
                if ($("#name").val().trim() == "" || $("#name").val().trim() == "请输入视频名称") {
                    alert("视频名称不能为空！");
                    $("#name").focus();
                } else if ($("#profile").val().trim() == "" || $("#profile").val().trim() == "请输入内容") {
                    alert("视频简介不能为空！");
                    $("#profile").focus();
                } else if ($("#addImg").attr("src") == "http://static.cn114.cn/action/xuanwuba/images/xwb150623_zj_pic01.jpg") {
					alert("请上传视频封面！");
				} else if ($("#link").val().trim().indexOf("<") > -1 || $("#link").val().trim().indexOf(">") > -1) {
                    alert("视频链接中不能包含HTML标签！");
                } else if ($("#link").val().trim() == "") {
                    alert("视频链接不能为空！");
                    $("#link").focus();
                } else if ($("#link").val().indexOf(".swf")==-1) {
                    alert("视频链接只能是一个Flash地址！");
                    $("#link").focus();
                } else {
                    $.ajax
                    ({
                        url: 'collectUpload',
                        type: 'POST',
                        data: $("#videoInfoForm").serialize(),
                        dataType: 'json',
                        success: function (d) {
                            alert(d.message);
                            if (d.isSuccess) {
                                window.location.href = "collectIndex";
                            }
                        },
                        error: function () {
                            alert("网络连接超时！")
                        }
                    })
                }
            })
        })
