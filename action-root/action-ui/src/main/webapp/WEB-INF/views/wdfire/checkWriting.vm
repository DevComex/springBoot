<!DOCTYPE html>
<html class="app">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>审核评论</title>
	<link href="http://oa.gyyx.cn/Script/datepicker/datepicker.css" rel="stylesheet" />
    <script src="http://oa.gyyx.cn/Script/js/jquery.min.js"></script>
    <script src="http://oa.gyyx.cn/Script/app.v2.js"></script>
    <script src="http://oa.gyyx.cn/Script/js/jquery.validate.js"></script>
    <script src="http://oa.gyyx.cn/Script/js/alertMsg.js"></script>
    <script src="http://oa.gyyx.cn/Script/js/jquery.functions.js"></script>
    <script src="http://oa.gyyx.cn/Script/js/getUserInfo.js"></script>
    <script src="http://oa.gyyx.cn/Script/js/te_data.js"></script>
    <script src="${rc.contextPath}/resources/js/jquery-ui.dialog.min.js"></script>
    <script src="http://oa.gyyx.cn/Script/datepicker/bootstrap-datepicker.js" type="text/javascript" charset="gbk"></script>
    <script type="text/javascript" charset="utf-8">
    	alert("谢谢参与，活动已结束");
    </script>
  </script>
</head>
<body>
    <section class="vbox">
        <header class="bg-dark dk header navbar navbar-fixed-top-xs js_template_top"></header>
        <section>
            <section class="hbox stretch">
                <aside class="bg-dark lter aside-md hidden-print js_template_left" id="nav"></aside>
                <section id="content">
                    <section class="vbox js_template_right">
                         <!--主体内容 begin-->
                        <section class="scrollable padder">
     
                            <!--数据表格  begin -->
                            <section class="panel panel-default" style="overflow: scroll;height:100%">
							
							<table border="0" class="table" style="table-layout:fixed;word-break:break-all; word-wrap:break-all;"width="4000">
        					<thead>
        						<th width="60">序号</th>
                                <th width="100">用户账号</th>
        						<th width="100">稿件标题</th>
								<th width="500">稿件内容</th>
								<th width="100">视频/图片地址</th>
                                <th width="200">记录时间</th>
								<th width="100">通过</th>
								<th width="100">不通过</th>
        					</thead>
                            #foreach($!writing in $!writingList)
                               	<tbody>	  		  
                        			<td>$velocityCount</td>
                            		<td>$!writing.author</td>
                            		<td>$!writing.title</td>
									<td>$!writing.story</td>
                                    <td><a href="$!writing.mediaUrl">$!writing.mediaUrl</a></td>
                            		<td>$!writing.timeString</td>
                                    <td>
		                           <form action="setCheck" method="post">
									<input type="hidden" name="writingCode" value="$!writing.code"/>
									<input type= "submit" value="通过">
								   </form>
									</td>
									 <td>	
									<form action="removeCheck" method="post">
									<input type="hidden" name="writingCode" value="$!writing.code"/ >
									<input type= "submit" value="删除">
							        </form>
									</td>
                                 </tbody>
                        	 #end
						</table>

                         </section>
                            <!--数据表格  end -->
                        </section>
                        <!--主体内容 end-->

                    </section>
                </section>
            </section>
        </section>
    </section>
</body>
</html>