	$(function(){
		$(".Captchaa").attr("src", "http://api.gyyx.cn/Captcha/CreateVJ.ashx" + "?r=" + Math.random());
		$(".Captchaa").click(function(){
			$(".Captchaa").attr("src", "http://api.gyyx.cn/Captcha/CreateVJ.ashx" + "?r=" + Math.random());
		});
		$.ajax({
			url: "${rc.contextPath}/LHZS/getRegion",
			type: "GET",
            data: { r: Math.random() },
            success: function (d) {
            var temp = d.data;
				if(d.isSuccess){
					$("#selectId").html("");
					var region = eval("(" + temp + ")");
					for(var paraM in region.data){
						if(region.data[paraM].IsOpen==true && region.data[paraM].IsActivation ==true){
							$("#selectId").append("<option value="+region.data[paraM].Code+">"+region.data[paraM].ServerName+"</option>");
						}
					}
				}else{
					alert("网络不给力！！！");
				}
            },
            error : function(){
            	alert("网络不给力！！");
            }
		});
		$("#restButton").click(function(){
			$("#titleMes").val("");	
			$("#accountMes").val("");	
			$("#roleMes").val("");	
			$("#contentMes").val("");	
			$("#captchaMes").val("");
		});
		$("#submitBug").click(function(){
			var titleMes = $("#titleMes").val();	
			var accountMes = $("#accountMes").val();	
			var roleMes = $("#roleMes").val();	
			var contentMes = $("#contentMes").val();	
			var captchaMes = $("#captchaMes").val();
			var area = $("#selectId").val();
			if(titleMes==""){
				alert("标题不能为空！");
				return false;
			}if(accountMes==""){
				alert("账号不能为空！");
				return false;
			}if(roleMes==""){
				alert("角色不能为空！");
				return false;
			}if(contentMes==""){
				alert("提交内容不能为空！");
				return false;
			}if(captchaMes==""){
				alert("请填写验证码！");
				return false;
			}if(area=="0"){
				alert("网络不给力,请稍后再试！");
			}
			var formData = actionUtil.genOperationData('bug');
					formData.title = titleMes;
					formData.area = area;
					formData.content = contentMes;
					formData.captcha = captchaMes;
					formData.account = accountMes;
					formData.role = roleMes;
			$.ajax({
			url: "${rc.contextPath}/commonSupporter/ajaxOperation",
			type: "GET",
            data: { 
				"data":formData
			 },
            success: function (d) {
				if(d.isSuccess){
					alert("提交成功！！");
					$("#titleMes").val("");	
					$("#accountMes").val("");	
					$("#roleMes").val("");	
					$("#contentMes").val("");	
					$("#captchaMes").val("");
				}else{
					alert("网络不给力，提交失败！");
				}
            },
            error : function(){
            	alert("网络不给力！！！！");
            }
		});
			
		});
			
		
	});
</script>
