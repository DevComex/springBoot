<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

 	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Threshold" value="all" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{yyyy/MM/dd HH:mm:ss}]GyyxPlaywdOa : %-5p: %c - %m%n" />
		</layout>
	</appender> 

	<appender name="rollingFileAppender" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="/data/logs/playwd-oa.gyyx.cn/roll/playwd.log" />
		<param name="Threshold" value="all" />
		<param name="MaxFileSize" value="5MB" />
		<param name="Encoding" value="UTF-8" />

		<param name="MaxBackupIndex" value="5" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="[%d{yyyy/MM/dd HH:mm:ss}]GyyxPlaywdOa : %-5p: %c - %m%n" />
		</layout>
	</appender>

	<!-- 每天日志 -->
	<appender name="dailyRollingFileAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/logs/playwd-oa.gyyx.cn/daily/log_" />
		<param name="datePattern" value="yyyyMMdd'.log'"/>
		<param name="Encoding" value="UTF-8" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="conversionPattern"
				value="[%d{yyyy/MM/dd HH:mm:ss:SSS}]GyyxPlaywdOa : %-5p: %c - %m%n" />
		</layout>
	</appender>
	
	<!-- 错误日志 -->
	<appender name="errorDailyRollingFileAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name ="Threshold" value ="ERROR"/> 
		<param name="File" value="/data/logs/playwd-oa.gyyx.cn/error/error_" />
		<param name="datePattern" value="yyyyMMdd'.log'"/>
		<param name="Encoding" value="UTF-8" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="conversionPattern"
				value="[%d{yyyy/MM/dd HH:mm:ss:SSS}]GyyxPlaywdOa : %-5p: %c - %m%n" />
		</layout>
	</appender>
	
	<logger name="org.springframework">  
        <level value="info" />  
    </logger>  
    
	<logger name="org.apache.http">  
        <level value="info" />  
    </logger>  
    
	<logger name="org.apache.velocity">  
        <level value="error" />  
    </logger>  
    
	<logger name="org.apache.commons">  
        <level value="info" />  
    </logger>  
    
	<logger name="org.mybatis.spring">  
        <level value="info" />  
    </logger>  
    <logger name="org.apache.ibatis">  
        <level value="info" />  
    </logger>
    
    <logger name="com.google.code.yanf4j">  
        <level value="info" />  
    </logger>
    <logger name="net.rubyeye.xmemcached">  
        <level value="info" />  
    </logger>
	
	<root>
        <level value ="debug"/>
        <appender-ref ref="console"/>
        <appender-ref ref="dailyRollingFileAppender"/>
		<appender-ref ref="rollingFileAppender"/>
        <appender-ref ref="errorDailyRollingFileAppender"/>
    </root>

</log4j:configuration>
